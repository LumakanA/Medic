<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EmailKodFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/but_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="160dp"
        style="@style/Widget.MaterialComponents.Button"
        android:backgroundTint="@color/light_gray"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        app:icon="@drawable/baseline_arrow_back_ios_new_24"
        app:iconTint="@color/but_back"
        app:cornerRadius="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_email"
        android:fontFamily="@font/sfprodisplay_600"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="232dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/enter_kod1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/radius_edittext"
        android:inputType="number"
        android:textColor="@color/black"
        android:maxLength="1"
        android:paddingStart="20dp"/>

    <EditText
        android:id="@+id/enter_kod2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/radius_edittext"
        android:inputType="number"
        android:textColor="@color/black"
        android:maxLength="1"
        android:paddingStart="20dp"/>

    <EditText
        android:id="@+id/enter_kod3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="285dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/radius_edittext"
        android:inputType="number"
        android:textColor="@color/black"
        android:maxLength="1"
        android:paddingStart="20dp"/>

    <EditText
        android:id="@+id/enter_kod4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="285dp"
        android:layout_marginStart="90dp"
        android:background="@drawable/radius_edittext"
        android:inputType="number"
        android:textColor="@color/black"
        android:maxLength="1"
        android:paddingStart="20dp"/>


</FrameLayout>